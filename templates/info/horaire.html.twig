{% extends 'base.html.twig'%}

{% block body %}



   {{ form_start(form) }}
    <div class="card container col-6 mt-5 card-style">
        
        <h1 class="text-center mt-3">Modifier les horaires</h1>
            <div class="card-title text-center  homeBanniere">
            </div>
        <div class="row text-center">
            <div class="col option container col-3">{{ form_row(form.Jour)}}</div>
        </div>
        <div class="row text-center">
            <div class="col option container col-2">{{ form_row(form.heureMatinOuverture)}}</div>
            <div class="col option container col-2">{{ form_row(form.heureMatinFermeture)}}</div>
            <div class="col-2"></div>
            <div class="col option container col-2">{{ form_row(form.heureApresMidiOuverture)}}</div>
            <div class="col option container col-2">{{ form_row(form.heureApresMidiFermeture)}}</div>
        </div>                   
        <div class="form-group text-center">
            <button class="btnValide ml-3">{{ button| default('Valider') }}</button>
        </div>
    </div>                    
	{{ form_end(form) }}


{% endblock %}