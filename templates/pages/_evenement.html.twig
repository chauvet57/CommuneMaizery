
	<div class="card card-body card-insert">
		<h5 class="card-title row">
            <p class="activite-option">{{  evenement.Titre }}</p> 
            <p>({{  evenement.Datedebut|date('d/m/Y') }})</p>
        </h5>
        {% if  evenement.Description|length < 70 %}
            <p class="card-text"><h4> {{  evenement.Description }}</h4> </p>
        {% else %}
            <p class="card-text"><h4> {{  evenement.Description|slice(0,70)|raw }} ...</h4> </p>
        {% endif %}
	</div>
