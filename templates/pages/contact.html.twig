{% block title "communeDeMaizery" %}


{% block body %}

	<br>
	{% include 'navbar.html.twig' %}

	<br>
	{% for message in app.flashes('success') %}
            <div class="alert alert-success container col-3">
				<div class="message-success">
                	{{ message }}
				</div>
            </div>
        {% endfor %}
