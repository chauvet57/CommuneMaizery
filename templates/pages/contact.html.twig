					<div class="col contact-option">{{ form_row(form.Nom)}}</div>
					<div class="col contact-option">{{ form_row(form.email)}}</div>
					<div class="col contact-option">{{ form_rest(form)}}</div>
					<div class="form-group">
						<button class="btnValide ml-3">{{ button| default('Envoyer') }}</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</body>
</div></body><footer>
